<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Link.LinkFragment">

    <EditText
        android:id="@+id/tvRfidMetka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvRfidMetka3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/tvRfidMetka2"
        tools:layout_editor_absoluteX="52dp" />

    <EditText
        android:id="@+id/tvSearchRFidtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/tvRfidMetka3"
        tools:layout_editor_absoluteX="52dp" />

    <TextView
        android:id="@+id/tvSearchtitle2"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Барабан"
        app:layout_constraintStart_toStartOf="@+id/tvRfidMetkaTitle2"
        tools:layout_editor_absoluteY="202dp" />

    <TextView
        android:id="@+id/tvRfidMetkaTitle2"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:text="Метка"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/tvRfidMetkaTitle3"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:text="Метка"
        app:layout_constraintStart_toStartOf="@+id/tvRfidMetkaTitle2"
        tools:layout_editor_absoluteY="118dp" />

    <ProgressBar
        android:id="@+id/loadingLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btClearLink"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_marginEnd="56dp"
        android:text="@string/buttonClerar"
        android:textSize="15sp"
        app:icon="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="656dp" />

    <Button
        android:id="@+id/btSetLink"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:text="@string/buttonLink"
        android:textSize="15sp"
        app:icon="@drawable/ic_delete"
        app:layout_constraintEnd_toStartOf="@+id/btClearLink"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="656dp" />

</androidx.constraintlayout.widget.ConstraintLayout>