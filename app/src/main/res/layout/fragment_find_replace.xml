<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FindReplace.FindReplaceFragment">

    <EditText
        android:id="@+id/tvRfidMetkaSearchReplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Метка"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/tvRfidMetkaSearchReplaceTitle2"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:text="@string/Metka"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/tvRfidMetkaSearchReplaceSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Метка"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/tvSearchtitle3"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="@string/BarabanTitle"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="280dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="210dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/tvRfidMetkaSearchReplaceSecondTitle"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:text="@string/Metka"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/btClearFindReplace"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="36dp"
        android:text="@string/buttonClerar"
        android:textSize="15sp"
        app:icon="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btSetLinkFindReplace"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:text="@string/buttonLink"
        android:textSize="15sp"
        app:icon="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/btClearFindReplace"
        app:layout_constraintEnd_toStartOf="@+id/btClearFindReplace"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btClearFindReplace"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/loadingFindReplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>